<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <% if current_user == task.user %>
          <div>
            <%= task.user.name %> <span class="text-muted">posted at <%= task.created_at %></span>
          </div>
          <div>
            <p><%= task.id %> : <%= task.content %> : <%= task.status %></p>
          </div>
          <div>
              <%= link_to 'このタスクを編集する', edit_task_path(task) %>
              <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
        <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>