<% if logged_in? %>
  <h1>タスクリスト一覧</h1>
  <%= link_to '新規タスク作成', new_task_path %>
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>タスクリスト</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>